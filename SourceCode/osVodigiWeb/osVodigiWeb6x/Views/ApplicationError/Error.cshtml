@model System.Web.Mvc.HandleErrorInfo
@using System.Web.Mvc
@{
    ViewBag.Title = (!String.IsNullOrEmpty(ViewBag.StatusCode)) ? ViewBag.StatusCode : "500 Error";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>



<div class="textblock">
    <h1>
        <span class="paragraphheader">Application Error</span>
    </h1>
    <p>Status code: @(!String.IsNullOrEmpty(ViewBag.StatusCode) ? ViewBag.StatusCode : "500")</p>
    <p class="paragraphtext">The application has generated the following error. Please click your Browser's <b>Back</b> button and try again.</p>
</div>


<div class="textblock">
    <h2 class="paragraphheader">Error Detail</h2>
    <span class="errortext">@Html.Raw(ViewBag.ErrorMessage)</span>
</div>
