@{
    ViewBag.Title = "ApplicationError";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<br /><br />
<div class="textblock">
    <span class="paragraphheader">Application Error</span><br />
    <span class="paragraphtext">The application has generated the following error. Please click your Browser's <b>Back</b> button and try again.</span>
</div>
<br /><br /><br /><br />
@using (Html.BeginForm()) {

<div class="textblock">
    <span class="errortext">
    <b>Controller/Action:</b><br />
    @Html.Raw((string)ViewData["Controller"]) - 
    @Html.Raw((string)ViewData["Action"])<br /><br />
    <b>Error:</b><br />
    @Html.Raw((string)ViewData["ErrorMessage"])
    </span>
</div>

}

