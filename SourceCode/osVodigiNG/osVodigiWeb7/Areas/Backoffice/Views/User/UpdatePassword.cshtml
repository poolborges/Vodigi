@model osVodigiWeb7x.Models.User

@{
    ViewBag.Title = "Change Password";
}


@using (Html.BeginForm()) {
    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Change User</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Username: </b></td>
            <td class="formprimary">
                @Html.DisplayFor(model => model.Username)
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Password: </b></td>
            <td class="formsecondary">
                @Html.PasswordFor(model => model.Password, new { @style = "width:300px;", maxlength = 20 })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Confirm Password: </b></td>
            <td class="formprimary">
                <input type="password" id="txtConfirmPassword" name="txtConfirmPassword" style="width:300px;" />
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Save" style="width:75px;" />@Html.ActionLink("Back to List", "Index")</div></td>
        </tr>
    </table>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.AccountID)
    @Html.HiddenFor(model => model.Username)
    @Html.HiddenFor(model => model.FirstName)
    @Html.HiddenFor(model => model.LastName)
    @Html.HiddenFor(model => model.EmailAddress)
    @Html.HiddenFor(model => model.IsActive)
}

