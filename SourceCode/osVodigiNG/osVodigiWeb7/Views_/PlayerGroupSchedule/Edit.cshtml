@model osVodigiWeb6x.Models.PlayerGroupSchedule

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    }); 
</script>

<br />
<div class="textblock">
    <table class="instructions">
        <tr>
            <td style="width:100px;"><img src="~/Images/playergroup-icon.png" alt="" style="border-radius:8px 8px;" /></td>
            <td>
                <span class="paragraphheader">Manage Player Group Schedule</span><br />
                <span class="paragraphtext">Please update the appropriate information below. When adding new screens to the schedule, any existing screens at the specified day and time will be overwritten.</span>
            </td>
        </tr>
    </table>
</div>
<br />
<br />@using (Html.BeginForm()) {

    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Add Screen to Schedule</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Player Group: </b></td>
            <td class="formprimary">@Html.Raw((string)ViewData["PlayerGroupName"])</td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Screen: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.DropDownList("lstScreen", (SelectList)ViewData["ScreenList"], new { @style = "width:300px;" })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Day of Week: <span class="required">*</span></b></td>
            <td class="formprimary">
                <input type="checkbox" id="chkSunday" name="chkSunday" value="Sunday" />Sun
                <input type="checkbox" id="chkMonday" name="chkMonday" value="Monday" style="margin-left:8px;" />Mon
                <input type="checkbox" id="chkTuesday" name="chkTuesday" value="Tuesday" style="margin-left:8px;" />Tue
                <input type="checkbox" id="chkWednesday" name="chkWednesday" value="Wednesday" style="margin-left:8px;" />Wed
                <input type="checkbox" id="chkThursday" name="chkThursday" value="Thursday" style="margin-left:8px;" />Thu
                <input type="checkbox" id="chkFriday" name="chkFriday" value="Friday" style="margin-left:8px;" />Fri
                <input type="checkbox" id="chkSaturday" name="chkSaturday" value="Saturday" style="margin-left:8px;" />Sat
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Hour/Minute: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.DropDownList("lstHour", (SelectList)ViewData["HourList"], new { @style = "width:50px;" })
                @Html.DropDownList("lstMinute", (SelectList)ViewData["MinuteList"], new { @style = "width:50px;" })
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Save" style="width:75px;" />@Html.ActionLink("Back to List", "Index", "PlayerGroup")</div></td>
        </tr>
    </table>
    <div class="formfootnote"><span class="required">*</span> indicates a required field.</div>
    @Html.Hidden("txtPlayerGroupID", ViewData["PlayerGroupID"])              
}

<br />
<span class="paragraphheader" style="margin-left:30px;">Current Player Group Schedule</span><br />
@Html.Raw((string)ViewData["ScheduleHTML"])<br /><br />
<br /><br />