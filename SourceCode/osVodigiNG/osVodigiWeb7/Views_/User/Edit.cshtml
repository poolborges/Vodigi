@model osVodigiWeb6x.Models.User

@{
    ViewBag.Title = "Edit";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    }); 
</script>

<br />
<div class="textblock">
    <table class="instructions">
        <tr>
            <td style="width:100px;"><img src="~/Images/user-icon.png" alt="" style="border-radius:8px 8px;" /></td>
            <td>
                <span class="paragraphheader">Edit User</span><br />
                <span class="paragraphtext">Please update the appropriate information below.</span>
            </td>
        </tr>
    </table>
</div>
<br />
@using (Html.BeginForm()) {
    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Edit User</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Account: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.DropDownList("lstAllAccounts", (SelectList)ViewData["AccountList"], new { @style = "width:300px;" })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Username: </b></td>
            <td class="formprimary">
                @Html.DisplayFor(model => model.Username)
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>First Name: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.TextBoxFor(model => model.FirstName, new { @style = "width:300px;", maxlength = 50 })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Last Name: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.TextBoxFor(model => model.LastName, new { @style = "width:300px;", maxlength = 50 })
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Email Address: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.TextBoxFor(model => model.EmailAddress, new { @style = "width:300px;", maxlength = 200 })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Is Administrator: </b></td>
            <td class="formprimary">
                @Html.EditorFor(model => model.IsAdmin)
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Active: </b></td>
            <td class="formsecondary">
                @Html.EditorFor(model => model.IsActive)
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Save" style="width:75px;" />@Html.ActionLink("Back to List", "Index")</div></td>
        </tr>
    </table>
    <div class="formfootnote"><span class="required">*</span> indicates a required field.</div>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.Username)
    @Html.HiddenFor(model => model.AccountID)
    @Html.HiddenFor(model => model.Password)
}

<br /><br />
