@model osVodigiWeb6x.Models.Screen

@{
    ViewBag.Title = "Wizard";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    });
</script>

<br />
<div class="textblock">
    <table class="instructions">
        <tr>
            <td style="width:100px;"><img src="~/Images/screen-icon.png" alt="" style="border-radius:8px 8px;" /></td>
            <td>
                <span class="paragraphheader">Screen Wizard - Step 1: Screen Information</span><br />
                <span class="paragraphtext">Please enter the appropriate information for this screen.</span>
            </td>
        </tr>
    </table>
</div>
<br />
@using (Html.BeginForm()) {

    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Screen Information</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Screen Name: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.TextBoxFor(model => model.ScreenName, new { @style = "width:300px;", maxlength = 128 })
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Screen Description: </b></td>
            <td class="formsecondary">
                @Html.TextBoxFor(model => model.ScreenDescription, new { @style = "width:300px;", maxlength = 1024 })
            </td>
        </tr>
        <tr>
            <td class="formprimary" style="vertical-align:top;"><b>Main Feature Type: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.DropDownList("lstMainFeatureType", (SelectList)ViewData["MainFeatureTypeList"], new { @style = "width:300px;" })
            </td>
        </tr>
        <tr>
            <td class="formsecondary" style="vertical-align:top;"><b>Add Interactive Content: </b></td>
            <td class="formsecondary">
                @Html.EditorFor(model => model.IsInteractive)
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Active: </b></td>
            <td class="formprimary">
                @Html.EditorFor(model => model.IsActive)
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Next >" style="width:75px;" />@Html.ActionLink("Back to List", "Index", "Screen")</div></td>
        </tr>
    </table>
    <div class="formfootnote"><span class="required">*</span> indicates a required field.</div>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
    @Html.HiddenFor(model => model.ScreenID);
    @Html.HiddenFor(model => model.ButtonImageID);
    @Html.HiddenFor(model => model.SlideShowID);    
    @Html.HiddenFor(model => model.PlayListID);    
    @Html.HiddenFor(model => model.TimelineID);        
}

<br /><br />