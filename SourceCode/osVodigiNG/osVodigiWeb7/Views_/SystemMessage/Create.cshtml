@model osVodigiWeb6x.Models.SystemMessage

@{
    ViewBag.Title = "Create";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("input:text:visible:first").focus();
    }); 
    $(document).ready(function ()
    {
        $('.date').datepicker({ dateFormat: "mm/dd/yy" });
    }
    );
</script>

<br />
<div class="textblock">
    <table class="instructions">
        <tr>
            <td style="width:100px;"><img src="~/Images/message-icon.png" alt="" style="border-radius:8px 8px;" /></td>
            <td>
                <span class="paragraphheader">Add System Message</span><br />
                <span class="paragraphtext">Please enter the appropriate information to add a new system message.</span>
            </td>
        </tr>
    </table>
</div>
<br />
@using (Html.BeginForm()) {

    <table class="formtable" style="border-spacing:0;border-collapse:collapse;" role="presentation">
        <tr>
            <td class="formheader" colspan="2">Add System Message</td>
        </tr>
        <tr>
            <td class="formprimary"><b>Title: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.TextBoxFor(model => model.SystemMessageTitle, new { @style = "width:300px;", maxlength = 64 })
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>Body: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.TextBoxFor(model => model.SystemMessageBody, new { @style = "width:300px;", maxlength = 256 })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Start Date: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.TextBoxFor(model => model.DisplayDateStart, new { @Value = Model.DisplayDateStart.ToString("d"), @style = "width:100px;font-size:12px;", @class = "date" })
            </td>
        </tr>
        <tr>
            <td class="formsecondary"><b>End Date: <span class="required">*</span></b></td>
            <td class="formsecondary">
                @Html.TextBoxFor(model => model.DisplayDateEnd, new { @Value = Model.DisplayDateEnd.ToString("d"), @style = "width:100px;font-size:12px;", @class = "date" })
            </td>
        </tr>
        <tr>
            <td class="formprimary"><b>Priority: <span class="required">*</span></b></td>
            <td class="formprimary">
                @Html.TextBoxFor(model => model.Priority, new { @style = "width:50px;", maxlength = 4 })
            </td>
        </tr>
        <tr>
            <td class="formfooter" colspan="2"><div id="returnlink"><input type="submit" value="Save" style="width:75px;" />@Html.ActionLink("Back to List", "Index")</div></td>
        </tr>
    </table>
    <div class="formfootnote"><span class="required">*</span> indicates a required field.</div>
    <br />
    <div class="errormessage">@Html.Raw((string)ViewData["ValidationMessage"])</div>
}

<br /><br />
